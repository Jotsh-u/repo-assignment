<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conNoData"
    android:visibility="visible"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNoData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_no_data_available"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_description"
        android:textSize="@dimen/text_size_normal_xx"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNoDataSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_check_internet"
        android:gravity="center"
        android:visibility="gone"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_description"
        android:textSize="@dimen/text_size_normal_xxxx"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNoData"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRetry"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_bg_bordered"
        android:text="@string/str_retry"
        android:textSize="@dimen/text_size_medium"
        android:textAllCaps="false"
        android:textColor="@color/color_description"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>