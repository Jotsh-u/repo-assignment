<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_normal_xxxx"
    android:layout_marginHorizontal="@dimen/margin_normal_xxxx"
    app:cardCornerRadius="@dimen/margin_small_x"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small_xxxx">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTodayStar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_trending_stars"
            android:textSize="@dimen/text_size_normal_xx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgFavorite"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            app:layout_constraintTop_toTopOf="@id/txtTodayStar"
            app:layout_constraintBottom_toBottomOf="@id/txtTodayStar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txtTodayStar"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRepoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmerColor"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:textColor="@color/title_dark_blue"
            android:textSize="@dimen/text_size_normal_xxxx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTodayStar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/shimmerColor"
                app:layout_constraintTop_toBottomOf="@id/txtRepoName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRepoDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Powerful asynchronous state management, server-state utilities and data fetching for the web. TS/JS, React Query, Solid Query, Svelte Query and Vue Query."
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLanguageType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Python"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtRepoDescription"
                    android:layout_marginTop="@dimen/margin_small_xxx"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTotalStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal_xx"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="@dimen/margin_small"
                    tools:text="26,265"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintTop_toTopOf="@id/txtLanguageType"
                    app:layout_constraintStart_toEndOf="@id/txtLanguageType"
                    app:layout_constraintBottom_toBottomOf="@id/txtLanguageType"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTotalForks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal_xx"
                    android:drawableStart="@drawable/ic_fork"
                    android:drawablePadding="@dimen/margin_small"
                    tools:text="5,235"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintTop_toTopOf="@id/txtTotalStars"
                    app:layout_constraintStart_toEndOf="@id/txtTotalStars"
                    app:layout_constraintBottom_toBottomOf="@id/txtTotalStars"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>